<div class="row">
  <h1 class="title">投稿編集</h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post,url: "/posts/edit/#{@post.id}",method: :patch) do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            The form contains <%= pluralize(@post.errors.count, "error") %>.
          </div>
          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.label :title ,"作品名"%>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.label :content ,"内容"%>
      <%= f.text_area :content, class: 'form-control form-content' %>

      <%= f.label :image, "トップページ画像" %> <!-- 後でやる　何にしようかな -->
      <%= f.file_field :image, class: 'form-control' %>

      <%= f.submit "編集", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>