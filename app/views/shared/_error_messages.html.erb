<% if @user.errors.any? %>
  <div id="error_explanation" class="error_explanation">
    <span class="fa fa-times fa-2x"></span>
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>