<div class="user-page">
  <div class="user-prof">
    <div class="user">
      <%= image_tag 'default.jpg' %>
      <p><%= @user.name %></p>
      <% if @user.id == current_user.id %>
        <span><%= link_to "プロフィール編集","#" %></span>
        <span><%= link_to "新規投稿", "/posts/new" %>
      <% end %>
    </div>
    <div class="mypost">
      <h1><%= @user.name %>の投稿</h1>
      <hr>
      <% @user.posts.each do |post| %>
        <p><%= link_to "#{post.title}", "/posts/show/#{post.id}" %></p>
      <% end %>
    </div>
    <div class="your-batch">
    </div>
  </div>
</div>